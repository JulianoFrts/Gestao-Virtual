# ===========================================
# CONFIGURAÇÃO DO AMBIENTE - GESTÃO VIRTUAL API
# ===========================================
# Copie este arquivo para .env.local e configure os valores

# ----- BANCO DE DADOS -----
DATABASE_URL="postgresql://user:password@localhost:5432/orion_db?schema=public"

# ----- SEGURANÇA (REGRA DE OURO) -----
JWT_SECRET="sua-chave-jwt-aqui-minimo-32-caracteres"
TOKEN_SECRET="alias-para-jwt-secret-se-necessario"
JWT_EXPIRES_IN="7d"

# ----- SERVIDOR -----
SERVER_IP="localhost"
SERVER_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="sua-chave-secreta-aqui"

# ----- RATE LIMITING -----
API_RATE_LIMIT="100"
API_RATE_LIMIT_WINDOW_MS="60000"

# ----- AMBIENTE -----
NODE_ENV="development"

