{
  "name": "orion-system-backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "npm run openapi:generate && next dev -p 3000",
    "dev:https": "set PRISMA_CLIENT_ENGINE_TYPE=library && next dev --experimental-https",
    "openapi:generate": "tsx src/scripts/generate-openapi.ts",
    "build": "npm run openapi:generate && next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "npm run lint:fix && npm run typecheck",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "db:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "seed": "npx tsx src/scripts/seed-initial-data.ts",
    "sync:permissions": "npx tsx src/scripts/sync-permissions.ts",
    "seed:matrix": "npx tsx src/scripts/seed-permission-matrix.ts",
    "audit:scan": "npx tsx scripts/run-audit-scan.ts",
    "worker": "npx tsx worker.ts",
    "db:setup": "npx tsx master-setup.ts",
    "db:backup": "npx tsx prisma/backup-seeds.ts",
    "db:restore": "npx tsx src/scripts/restore-from-backup.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^6.3.0",
    "@prisma/client": "6.3.0",
    "@prisma/engines": "^6.3.0",
    "bcryptjs": "^2.4.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "jose": "^6.1.3",
    "next": "^15.1.6",
    "next-auth": "^5.0.0-beta.30",
    "next-swagger-doc": "^0.4.1",
    "pg": "^8.17.2",
    "prisma": "6.3.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-react": "^5.31.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@rocketseat/eslint-config": "^3.0.1",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.19.7",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-react": "^5.18.0",
    "dotenv": "^16.6.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.1.6",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.0"
  }
}